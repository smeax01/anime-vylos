---
import Logo from "./Logo.astro";
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-grid">
      <div class="footer-brand">
        <Logo />
        <p class="brand-desc">
          L'expérience anime ultime. Stream gratuit sans pub.
        </p>
        <div class="social-links">
          <a href="#" aria-label="Twitter">Twitter</a>
          <a href="#" aria-label="Instagram">Instagram</a>
          <a href="#" aria-label="Discord">Discord</a>
        </div>
      </div>

      <div class="footer-links-group">
        <div class="links-col">
          <h4 class="col-title">Navigation</h4>
          <a href="/">Accueil</a>
          <a href="/search">Recherche</a>
          <a href="/favorites">Favoris</a>
        </div>
        <div class="links-col">
          <h4 class="col-title">Compte</h4>
          <a href="/profile">Profil</a>
          <a href="/profile">Historique</a>
          <a href="/profile">Réglages</a>
        </div>
        <div class="links-col">
          <h4 class="col-title">Support</h4>
          <a href="/support">Aide</a>
          <a href="/support">Contact</a>
          <a href="/support">Conditions</a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="bottom-left">
        <p>&copy; {new Date().getFullYear()} Vylos. Tous droits réservés.</p>
      </div>
      <div class="bottom-right">
        <p class="love">Fait avec passion pour les fans d'anime.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #020617;
    padding: 5rem 0 8rem 0; /* Padding bottom for mobile navigation bar */
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    color: white;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.2fr 2fr;
      gap: 6rem;
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .brand-desc {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.6;
    max-width: 320px;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: white;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    opacity: 0.6;
    transition: all 0.2s ease;
  }

  .social-links a:hover {
    opacity: 1;
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .footer-links-group {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem;
  }

  @media (min-width: 640px) {
    .footer-links-group {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .links-col {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .col-title {
    color: white;
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .links-col a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    text-decoration: none;
    transition: color 0.2s ease;
    width: fit-content;
  }

  .links-col a:hover {
    color: white;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .love {
    opacity: 0.6;
    font-size: 0.85rem;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .footer-brand {
      align-items: center;
      text-align: center;
    }
    .brand-desc {
      max-width: 100%;
    }
    .social-links {
      justify-content: center;
    }
    .footer-links-group {
      text-align: center;
    }
    .links-col {
      align-items: center;
    }
    .links-col a {
      width: auto;
    }
  }
</style>
