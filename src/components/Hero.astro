---
import { Play, Info } from "lucide-astro";

interface Props {
  id: number; /* Ajout de l'ID */
  title: string;
  description: string;
  image: string;
  genres: string[];
  rating: number;
}

const { id, title, description, image, genres, rating } = Astro.props;

const cleanDesc = description
  ? description.replace(/<[^>]*>?/gm, "").slice(0, 150) + "..."
  : "";
---

<section class="hero">
  <div class="hero-bg">
    <img src={image} alt={title} />
    <div class="overlay"></div>
  </div>

  <div class="container hero-content">
    <div class="tags">
      <span class="badge new">Nouveauté</span>
      <span class="rating-badge">★ {rating / 10}</span>
    </div>

    <h1 class="hero-title">{title}</h1>
    <p class="hero-desc">{cleanDesc}</p>

    <div class="genre-list">
      {genres.slice(0, 3).map((g) => <span>{g}</span>)}
    </div>

    <div class="hero-actions">
      <a href={`/anime/${id}`} class="btn-primary">
        <Play size={20} fill="currentColor" />
        Regarder
      </a>
      <a href={`/anime/${id}`} class="btn-secondary">
        <Info size={20} />
        Détails
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 70vh;
    min-height: 500px;
    width: 100%;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
    padding-bottom: 4rem;
  }

  /* ... (Background styles same as before) ... */
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(2, 6, 23, 0.1) 0%,
      rgba(2, 6, 23, 0.6) 60%,
      rgba(2, 6, 23, 1) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .badge {
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-weight: 700;
    font-size: 0.7rem;
    text-transform: uppercase;
  }

  .rating-badge {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-size: 0.7rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .hero-desc {
    font-size: 0.95rem;
    color: #cbd5e1;
    line-height: 1.5;
    margin-bottom: 1rem;
    max-width: 600px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .genre-list {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
  }

  /* Updated Button Styles: Square Look */
  .btn-primary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md); /* Square radius */
    font-size: 1rem;
    font-weight: 600;
    box-shadow: var(--shadow-glow);
    transition:
      transform 0.2s,
      background 0.2s;
  }

  .btn-primary:active {
    transform: scale(0.95);
  }

  .btn-primary:hover {
    background: var(--color-primary-hover);
  }

  .btn-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: rgba(30, 41, 59, 0.6); /* Slate 800 transparent */
    color: white;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md); /* Square radius */
    font-size: 1rem;
    font-weight: 500;
    backdrop-filter: blur(4px);
  }

  .btn-secondary:hover {
    background: rgba(30, 41, 59, 1);
  }

  @media (min-width: 768px) {
    .hero {
      height: 85vh;
      align-items: center;
    }
    .hero-title {
      font-size: 4rem;
    }
  }
</style>
