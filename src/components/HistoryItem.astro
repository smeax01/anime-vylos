---
interface Props {
  image: string;
  title: string;
  episode: string;
  timeLeft: string;
  progress: number; // Percentage 0-100
}

const { image, title, episode, timeLeft, progress } = Astro.props;
---

<div class="history-card">
  <div class="thumbnail-wrapper">
    <img src={image} alt={title} loading="lazy" />
    <div class="play-overlay">
      <svg
        width="48"
        height="48"
        viewBox="0 0 24 24"
        fill="white"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M8 5V19L19 12L8 5Z"></path>
      </svg>
    </div>
    <div class="progress-bar-container">
      <div class="progress-bar" style={`width: ${progress}%`}></div>
    </div>
    <span class="time-left">{timeLeft} restants</span>
  </div>
  <div class="info">
    <h3 class="title">{title}</h3>
    <p class="episode">{episode}</p>
  </div>
</div>

<style>
  .history-card {
    width: 300px;
    flex-shrink: 0;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .history-card:hover {
    transform: translateY(-4px);
  }

  .thumbnail-wrapper {
    position: relative;
    border-radius: var(--radius-md);
    overflow: hidden;
    aspect-ratio: 16/9;
    margin-bottom: 0.75rem;
  }

  .thumbnail-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .history-card:hover .thumbnail-wrapper img {
    transform: scale(1.05);
  }

  .play-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .history-card:hover .play-overlay {
    opacity: 1;
  }

  .progress-bar-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.2);
  }

  .progress-bar {
    height: 100%;
    background: var(--color-primary);
    box-shadow: 0 0 10px var(--color-primary);
  }

  .time-left {
    position: absolute;
    bottom: 8px;
    right: 8px;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    font-size: 0.75rem;
    padding: 2px 6px;
    border-radius: 4px;
    font-weight: 500;
  }

  .title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .episode {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>
