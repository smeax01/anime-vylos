---
interface Props {
  scale?: number;
}
const { scale = 1 } = Astro.props;
---

<a href="/" class="logo" style={`transform: scale(${scale})`}>
  <svg
    width="100"
    height="32"
    viewBox="0 0 100 32"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M8 6L16 26L24 6"
      stroke="white"
      stroke-width="4"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
    <text
      x="32"
      y="24"
      fill="white"
      font-family="Outfit, sans-serif"
      font-weight="800"
      font-size="20"
      letter-spacing="-1">VYLOS</text
    >
  </svg>
</a>

<style>
  .logo {
    display: flex;
    align-items: center;
    transform-origin: center;
  }
</style>
