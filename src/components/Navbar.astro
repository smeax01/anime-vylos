---
import { Home, Search, Heart, User, LifeBuoy } from "lucide-astro";
import Logo from "./Logo.astro";

const token = Astro.cookies.get("anilist_token")?.value;
let userAvatar = null;

if (token) {
  try {
    const query = `query { Viewer { avatar { large } } }`;
    const res = await fetch("https://graphql.anilist.co", {
      method: "POST",
      headers: {
        Authorization: `Bearer ${token}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ query }),
    });
    const data = await res.json();
    userAvatar = data.data?.Viewer?.avatar?.large;
  } catch (e) {}
}

const pathname = Astro.url.pathname;
const isActive = (path: string) =>
  pathname === path || (path !== "/" && pathname.startsWith(path));
---

<!-- Desktop Navigation (Top) -->
<header class="navbar-desktop">
  <div class="container navbar-content">
    <div class="nav-left">
      <Logo />
      <nav class="nav-links">
        <a href="/" class={isActive("/") ? "nav-link active" : "nav-link"}
          >Accueil</a
        >
        <a
          href="/search"
          class={isActive("/search") ? "nav-link active" : "nav-link"}
          >Parcourir</a
        >
        <a
          href="/favorites"
          class={isActive("/favorites") ? "nav-link active" : "nav-link"}
          >Favoris</a
        >
        <a
          href="/support"
          class={isActive("/support") ? "nav-link active" : "nav-link"}
          >Support</a
        >
      </nav>
    </div>

    <div class="nav-right">
      <form action="/search" method="get" class="search-bar-inline">
        <Search size={18} class="search-icon" />
        <input
          type="text"
          name="q"
          placeholder="Rechercher un anime..."
          class="search-input"
        />
      </form>
      <a
        href="/profile"
        class={isActive("/profile") ? "profile-btn active" : "profile-btn"}
      >
        {
          userAvatar ? (
            <img src={userAvatar} alt="Profile" class="avatar-img" />
          ) : (
            <User size={20} />
          )
        }
      </a>
    </div>
  </div>
</header>

<!-- Mobile Navigation (Bottom) -->
<nav class="navbar-mobile">
  <a href="/" class={pathname === "/" ? "mobile-link active" : "mobile-link"}>
    <Home size={24} />
    <span>Accueil</span>
  </a>
  <a
    href="/search"
    class={isActive("/search") ? "mobile-link active" : "mobile-link"}
  >
    <Search size={24} />
    <span>Rech.</span>
  </a>
  <div class="mobile-link-highlight-wrapper">
    <div class="mobile-link-highlight">
      <Logo scale={0.6} />
    </div>
  </div>
  <a
    href="/support"
    class={isActive("/support") ? "mobile-link active" : "mobile-link"}
  >
    <LifeBuoy size={24} />
    <span>Aide</span>
  </a>
  <a
    href="/profile"
    class={isActive("/profile") ? "mobile-link active" : "mobile-link"}
  >
    {
      userAvatar ? (
        <img src={userAvatar} alt="Profile" class="avatar-img-mobile" />
      ) : (
        <User size={24} />
      )
    }
    <span>Profil</span>
  </a>
</nav>

<style>
  .navbar-desktop {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height-desktop);
    background: rgba(2, 6, 23, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    z-index: 1000;
  }

  .navbar-mobile {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height-mobile);
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    display: flex;
    justify-content: space-around;
    align-items: center;
    z-index: 1000;
    padding-bottom: env(safe-area-inset-bottom);
  }

  .mobile-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    color: var(--color-text-muted);
    font-size: 11px;
    font-weight: 500;
    width: 20%;
    text-decoration: none;
    transition: color 0.2s;
  }

  .mobile-link.active,
  .mobile-link:hover {
    color: var(--color-primary);
  }

  .mobile-link-highlight-wrapper {
    position: relative;
    top: -18px;
    width: 20%;
    display: flex;
    justify-content: center;
    z-index: 1001;
  }

  .mobile-link-highlight {
    width: 52px;
    height: 52px;
    background: var(--color-primary);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 15px rgba(59, 130, 246, 0.4);
    border: 4px solid var(--color-bg-main);
    transform: rotate(45deg);
    transition:
      transform 0.2s,
      background 0.2s;
  }

  .mobile-link-highlight:active {
    transform: rotate(45deg) scale(0.9);
  }

  /* Reset rotation for the logo inside the tilted box */
  .mobile-link-highlight :global(.logo) {
    transform: rotate(-45deg) !important;
    margin-left: -2px; /* Visual centering */
  }

  @media (min-width: 768px) {
    .navbar-desktop {
      display: block;
    }
    .navbar-mobile {
      display: none;
    }
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }
  .nav-left {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }
  .nav-links {
    display: flex;
    gap: 1.5rem;
  }
  .nav-link {
    color: var(--color-text-muted);
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
    transition: color 0.2s;
    position: relative;
  }
  .nav-link:hover,
  .nav-link.active {
    color: white;
  }
  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-bar-inline {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.4rem 1rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(255, 255, 255, 0.1);
    width: 250px;
    transition: border-color 0.2s;
  }
  .search-bar-inline:focus-within {
    border-color: var(--color-primary);
  }
  .search-icon {
    color: #64748b;
  }
  .search-input {
    background: transparent;
    border: none;
    outline: none;
    color: white;
    font-size: 0.85rem;
    width: 100%;
  }

  .profile-btn {
    width: 38px;
    height: 38px;
    background: var(--color-primary);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    overflow: hidden;
    text-decoration: none;
  }
  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .avatar-img-mobile {
    width: 24px;
    height: 24px;
    border-radius: 4px;
    object-fit: cover;
  }
</style>
