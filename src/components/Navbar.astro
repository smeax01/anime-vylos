---
import { Home, Search, Heart, User, LifeBuoy } from "lucide-astro";
import Logo from "./Logo.astro";

const pathname = Astro.url.pathname;
const isActive = (path: string) =>
  pathname === path || (path !== "/" && pathname.startsWith(path));
---

<!-- Desktop Navigation (Top) -->
<header class="navbar-desktop">
  <div class="container navbar-content">
    <div class="nav-left">
      <Logo />
      <nav class="nav-links">
        <a href="/" class={isActive("/") ? "nav-link active" : "nav-link"}
          >Accueil</a
        >
        <a
          href="/search"
          class={isActive("/search") ? "nav-link active" : "nav-link"}
          >Parcourir</a
        >
        <a
          href="/favorites"
          class={isActive("/favorites") ? "nav-link active" : "nav-link"}
          >Favoris</a
        >
        <a
          href="/support"
          class={isActive("/support") ? "nav-link active" : "nav-link"}
          >Support</a
        >
      </nav>
    </div>

    <div class="nav-right">
      <form action="/search" method="get" class="search-bar-inline">
        <Search size={18} class="search-icon" />
        <input
          type="text"
          name="q"
          placeholder="Rechercher un anime..."
          class="search-input"
        />
      </form>
      <a
        href="/profile"
        id="desktop-profile-btn"
        class={isActive("/profile") ? "profile-link active" : "profile-link"}
      >
        <div class="avatar-placeholder">
          <User size={20} />
        </div>
        <img
          id="desktop-avatar"
          src=""
          alt="Avatar"
          class="avatar-img hidden"
        />
      </a>
    </div>
  </div>
</header>

<!-- Mobile Navigation (Bottom) -->
<nav class="navbar-mobile">
  <a href="/" class={pathname === "/" ? "mobile-link active" : "mobile-link"}>
    <Home size={24} />
    <span>Accueil</span>
  </a>
  <a
    href="/search"
    class={isActive("/search") ? "mobile-link active" : "mobile-link"}
  >
    <Search size={24} />
    <span>Rech.</span>
  </a>
  <div class="mobile-link-highlight-wrapper">
    <a href="/" class="mobile-link-highlight">
      <Logo scale={0.6} />
    </a>
  </div>
  <a
    href="/support"
    class={isActive("/support") ? "mobile-link active" : "mobile-link"}
  >
    <LifeBuoy size={24} />
    <span>Aide</span>
  </a>
  <a
    href="/profile"
    id="mobile-profile-btn"
    class={isActive("/profile") ? "mobile-link active" : "mobile-link"}
  >
    <div class="avatar-placeholder-mobile">
      <User size={24} />
    </div>
    <img
      id="mobile-avatar"
      src=""
      alt="Avatar"
      class="avatar-img-mobile hidden"
    />
    <span>Profil</span>
  </a>
</nav>

<script>
  function updateNavbar() {
    const sessionStr = localStorage.getItem("vylos_session");
    if (sessionStr) {
      const user = JSON.parse(sessionStr);

      const desktopAvatar = document.getElementById(
        "desktop-avatar"
      ) as HTMLImageElement;
      const mobileAvatar = document.getElementById(
        "mobile-avatar"
      ) as HTMLImageElement;
      const desktopPlaceholder = document.querySelector(
        "#desktop-profile-btn .avatar-placeholder"
      );
      const mobilePlaceholder = document.querySelector(
        "#mobile-profile-btn .avatar-placeholder-mobile"
      );

      if (desktopAvatar && user.avatar) {
        desktopAvatar.src = user.avatar;
        desktopAvatar.classList.remove("hidden");
        desktopPlaceholder?.classList.add("hidden");
      }

      if (mobileAvatar && user.avatar) {
        mobileAvatar.src = user.avatar;
        mobileAvatar.classList.remove("hidden");
        mobilePlaceholder?.classList.add("hidden");
      }
    }
  }

  // Run on mount
  updateNavbar();

  // Listen for storage changes (e.g. login/logout)
  window.addEventListener("storage", updateNavbar);
</script>

<style>
  .navbar-desktop {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height-desktop);
    background: rgba(2, 6, 23, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    z-index: 1000;
  }

  .navbar-mobile {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: var(--nav-height-mobile);
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    display: flex;
    justify-content: space-around;
    align-items: center;
    z-index: 1000;
    padding-bottom: env(safe-area-inset-bottom);
  }

  .mobile-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    color: var(--color-text-muted);
    font-size: 11px;
    font-weight: 600;
    width: 20%;
    text-decoration: none;
    transition: all 0.2s;
  }

  .mobile-link.active {
    color: var(--color-primary);
  }

  .mobile-link-highlight-wrapper {
    position: relative;
    top: -15px;
    width: 20%;
    display: flex;
    justify-content: center;
  }

  .mobile-link-highlight {
    width: 56px;
    height: 56px;
    background: var(--color-primary);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 20px rgba(59, 130, 246, 0.4);
    border: 4px solid #020617;
    transform: rotate(45deg);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .mobile-link-highlight:active {
    transform: rotate(45deg) scale(0.9);
  }

  .mobile-link-highlight :global(.logo) {
    transform: rotate(-45deg) !important;
    margin-left: -2px;
  }

  @media (min-width: 768px) {
    .navbar-desktop {
      display: block;
    }
    .navbar-mobile {
      display: none;
    }
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 3rem;
  }
  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text-muted);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: color 0.2s;
    position: relative;
  }

  .nav-link:hover,
  .nav-link.active {
    color: white;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--color-primary);
    border-radius: 3px;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .search-bar-inline {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    width: 280px;
    transition: all 0.2s;
  }

  .search-bar-inline:focus-within {
    border-color: var(--color-primary);
    background: rgba(255, 255, 255, 0.08);
    width: 320px;
  }

  .search-icon {
    color: #64748b;
  }
  .search-input {
    background: transparent;
    border: none;
    outline: none;
    color: white;
    font-size: 0.9rem;
    width: 100%;
  }

  .profile-link {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    position: relative;
  }

  .avatar-placeholder,
  .avatar-placeholder-mobile {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s;
  }

  .avatar-placeholder-mobile {
    width: 24px;
    height: 24px;
    border-radius: 6px;
  }

  .profile-link:hover .avatar-placeholder {
    background: var(--color-primary);
    color: white;
    transform: scale(1.05);
  }

  .avatar-img {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    object-fit: cover;
    border: 2px solid var(--color-primary);
  }

  .avatar-img-mobile {
    width: 24px;
    height: 24px;
    border-radius: 6px;
    object-fit: cover;
    border: 1.5px solid var(--color-primary);
  }

  .hidden {
    display: none !important;
  }
</style>
