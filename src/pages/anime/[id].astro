    font-size: 0.75rem;
    color: white;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  .section-header {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    border-left: 4px solid var(--color-primary);
    padding-left: 0.75rem;
  }
  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.75rem;
  }
  :global(.episode-card) {
    background: #1e293b;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
    padding: 0;
    cursor: pointer;
    text-align: left;
  }
  :global(.episode-card:hover) {
    border-color: var(--color-primary);
  }
  :global(.no-img) {
    aspect-ratio: 16/9;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    color: #334155;
  }
  :global(.ep-info) {
    padding: 0.5rem;
  }
  :global(.ep-num) {
    font-size: 0.7rem;
    color: #64748b;
  }
  :global(.ep-title) {
    font-size: 0.8rem;
    font-weight: 600;
    color: white;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .loading-eps {
    padding: 2rem;
    text-align: center;
    color: var(--color-text-muted);
    width: 100%;
    grid-column: 1/-1;
  }

  .play-btn-large {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-primary);
    border: none;
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
  }
</style>
