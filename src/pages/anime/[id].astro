---
import Layout from "../../layouts/Layout.astro";
import { getAnimeById } from "../../lib/anilist";
import { ArrowLeft, Play, Calendar, Star } from "lucide-astro";

export const prerender = false; // Mode serveur

const { id } = Astro.params;
const animeId = Number(id);

// 1. Fetch Official Meta from AniList (Reliable)
let anime = null;
try {
  anime = await getAnimeById(animeId);
} catch (e) {
  console.error(e);
}

if (!anime) {
  return Astro.redirect("/404");
}

const coverImage =
  anime.bannerImage || anime.coverImage.extraLarge || anime.coverImage.large;
const title = anime.title.romaji || anime.title.english;
---

<Layout title={title}>
  <div class="player-page">
    <!-- Navbar Overlay -->
    <div class="top-nav">
      <a href="/" class="back-btn">
        <ArrowLeft size={24} />
      </a>
      <span class="nav-title">{title}</span>
    </div>

    <!-- Video Player Container -->
    <div class="video-container" id="video-wrapper">
      <div
        id="player-placeholder"
        class="placeholder"
        style={`background-image: url(${coverImage})`}
      >
        <button
          id="start-btn"
          class="play-btn-large"
          data-id={anime.id}
          data-title={title}
        >
          <Play fill="currentColor" size={32} />
          <span>Lancer la lecture</span>
        </button>
      </div>
      <div
        id="fallback-ui"
        class="hidden"
        style="position:absolute; inset:0; background:rgba(2,6,23,0.95); display:flex; flex-direction:column; align-items:center; justify-content:center; gap:15px; padding:20px; text-align:center; z-index:20;"
      >
        <h3 style="color:#ef4444; font-size:1.2rem;">
          Lecture directe indisponible
        </h3>
        <p style="color:#cbd5e1; font-size:0.9rem;">
          Impossible de trouver un flux gratuit stable pour cet anime via l'API.
        </p>
        <a
          href={`https://anitaku.to/search.html?keyword=${encodeURIComponent(title)}`}
          target="_blank"
          class="play-btn-large"
          style="text-decoration:none; background:#ef4444;"
        >
          Regarder sur Anitaku (Externe)
        </a>
      </div>
      <video id="player" controls crossorigin playsinline></video>
    </div>

    <!-- Meta Info -->
    <div class="container info-section">
      <h1 class="anime-title">{title}</h1>

      <div class="meta-row">
        <span class="meta-tag rating"
          >★ {anime.averageScore ? anime.averageScore / 10 : "?"}</span
        >
        <span class="meta-tag play-status">{anime.status}</span>
        <span class="meta-tag"
          >{anime.episodes ? anime.episodes + " Eps" : "?"}</span
        >
        <span class="meta-tag type">{anime.format}</span>
      </div>

      <p
        class="description"
        set:html={anime.description || "Aucune description."}
      />

      <!-- Genres -->
      <div class="genres">
        {anime.genres?.map((g) => <span class="genre-pill">{g}</span>)}
      </div>

      <!-- Episode List (Client Side Load) -->
      <h3 class="section-header">Épisodes</h3>
      <div id="episodes-grid" class="episodes-grid">
        <div class="loading-eps">Chargement des épisodes...</div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Hls from "hls.js";
  import Plyr from "plyr";
  import "plyr/dist/plyr.css";

  const video = document.getElementById("player") as HTMLVideoElement;
  const startBtn = document.getElementById("start-btn");
  const placeholder = document.getElementById("player-placeholder");
  const fallbackUI = document.getElementById("fallback-ui");
  const episodesGrid = document.getElementById("episodes-grid");
  let player: Plyr;

  // Retrieve data from button data attributes
  const animeId = startBtn?.dataset.id;
  const animeTitle = startBtn?.dataset.title;

  async function init() {
    if (!animeId) return;
    // Fetch episodes via Consumet (in users browser)
    try {
      // Search for the anime on Consumet to get the proper ID
      const searchRes = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/${animeId}`
      ); // Try direct mapping first
      let data = await searchRes.json();

      if (!data.episodes || data.episodes.length === 0) {
        // If ID mapping fails, search by query
        const qRes = await fetch(
          `https://api-consumet.vercel.app/meta/anilist/${encodeURIComponent(animeTitle)}`
        );
        const qData = await qRes.json();
        if (qData.results && qData.results.length > 0) {
          // Fetch details of first result
          const detailRes = await fetch(
            `https://api-consumet.vercel.app/meta/anilist/info/${qData.results[0].id}`
          );
          data = await detailRes.json();
        }
      }

      if (data.episodes && data.episodes.length > 0) {
        renderEpisodes(data.episodes);
      } else {
        episodesGrid.innerHTML =
          '<div class="error-eps">Épisodes introuvables. Utilisez le lien externe ci-dessus.</div>';
        showFallback();
      }
    } catch (e) {
      console.error(e);
      episodesGrid.innerHTML =
        '<div class="error-eps">Erreur de chargement.</div>';
    }
  }

  function renderEpisodes(episodes: any[]) {
    episodesGrid.innerHTML = "";
    episodes.forEach((ep: any) => {
      const btn = document.createElement("button");
      btn.className = "episode-card";
      btn.onclick = () => loadEpisode(ep.id);

      btn.innerHTML = `
             <div class="ep-thumb">
                ${ep.image ? `<img src="${ep.image}" loading="lazy" />` : `<div class="no-img">${ep.number}</div>`}
             </div>
             <div class="ep-info">
               <span class="ep-num">Épisode ${ep.number}</span>
               <span class="ep-title">${ep.title || `Épisode ${ep.number}`}</span>
             </div>
          `;
      episodesGrid.appendChild(btn);
    });

    // Bind start button to first episode
    if (startBtn && episodes.length > 0) {
      startBtn.onclick = () => loadEpisode(episodes[0].id);
    }
  }

  async function loadEpisode(episodeId: string) {
    if (placeholder) {
      placeholder.innerHTML = '<div class="loader">Lancement du flux...</div>';
      startBtn.style.display = "none";
    }

    if (fallbackUI) fallbackUI.classList.add("hidden");

    try {
      const res = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/watch/${episodeId}`
      );
      const data = await res.json();

      const source =
        data.sources?.find((s: any) => s.quality === "1080p") ||
        data.sources?.find((s: any) => s.quality === "default") ||
        data.sources?.[0];

      if (source?.url) {
        setupPlayer(source.url, source.isM3U8 || source.url.includes(".m3u8"));
        if (placeholder) placeholder.style.display = "none";
        video.style.display = "block";
      } else {
        throw new Error("No source");
      }
    } catch (e) {
      console.error("Stream error", e);
      showFallback();
    }
  }

  function showFallback() {
    if (placeholder) placeholder.style.display = "none";
    if (video) video.style.display = "none";
    if (fallbackUI) fallbackUI.classList.remove("hidden");
  }

  function setupPlayer(sourceUrl: string, isHls: boolean) {
    if (player) player.destroy();

    if (isHls && Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(sourceUrl);
      hls.attachMedia(video);
      hls.on(Hls.Events.MANIFEST_PARSED, () => video.play().catch(() => {}));
    } else if (video.canPlayType("application/vnd.apple.mpegurl")) {
      video.src = sourceUrl;
      video.addEventListener("loadedmetadata", () =>
        video.play().catch(() => {})
      );
    } else {
      video.src = sourceUrl;
      video.play().catch(() => {});
    }

    player = new Plyr(video, {
      controls: [
        "play-large",
        "play",
        "progress",
        "current-time",
        "mute",
        "volume",
        "fullscreen",
        "settings",
      ],
      settings: ["quality", "speed"],
    });
  }

  init();
</script>

<style>
  .hidden {
    display: none !important;
  }
  .player-page {
    padding-bottom: 80px;
    position: relative;
    min-height: 100vh;
  }

  .top-nav {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 50;
    background: linear-gradient(
      180deg,
      rgba(2, 6, 23, 0.9) 0%,
      transparent 100%
    );
  }

  .back-btn {
    color: white;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    display: flex;
    backdrop-filter: blur(4px);
  }

  .nav-title {
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.8);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .video-container {
    width: 100%;
    aspect-ratio: 16/9;
    background: #000;
    position: relative;
    max-height: 500px;
  }

  .placeholder {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0f172a;
  }

  .placeholder::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(2, 6, 23, 0.4);
    backdrop-filter: blur(2px);
  }

  .play-btn-large {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-primary);
    border: none;
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.4);
    cursor: pointer;
    transition: transform 0.2s;
  }

  .play-btn-large:hover {
    transform: scale(1.05);
  }

  #player {
    width: 100%;
    height: 100%;
    display: none;
  }

  .info-section {
    padding-top: 1.5rem;
  }

  .anime-title {
    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-text-main);
  }

  .meta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .meta-tag {
    background: var(--color-bg-card);
    padding: 0.25rem 0.6rem;
    border-radius: var(--radius-sm);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .rating {
    color: #fbbf24;
    font-weight: 700;
    border-color: rgba(251, 191, 36, 0.2);
  }

  .description {
    color: #94a3b8;
    line-height: 1.6;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    max-height: 150px;
    overflow-y: auto;
  }

  .genres {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .genre-pill {
    color: var(--color-accent);
    font-size: 0.8rem;
    font-weight: 500;
    background: rgba(56, 189, 248, 0.1);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
  }

  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
    gap: 0.75rem;
    min-height: 100px;
  }

  /* Episode card dynamic style injected by script typically, but putting base here */
  :global(.episode-card) {
    background: var(--color-bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    overflow: hidden;
    text-align: left;
    padding: 0;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    transition: all 0.2s;
    width: 100%;
  }
  :global(.episode-card:hover) {
    border-color: var(--color-primary);
  }

  :global(.ep-thumb) {
    aspect-ratio: 16/9;
    background: #000;
    position: relative;
  }
  :global(.ep-thumb img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8;
  }
  :global(.no-img) {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    font-weight: 700;
  }
  :global(.ep-info) {
    padding: 0.5rem;
  }
  :global(.ep-num) {
    display: block;
    font-size: 0.7rem;
    color: #cbd5e1;
  }
  :global(.ep-title) {
    display: block;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: white;
  }

  .loader,
  .loading-eps,
  .error-eps {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    text-align: center;
    width: 100%;
    padding: 1rem;
  }
</style>
