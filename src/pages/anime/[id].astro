---
import Layout from "../../layouts/Layout.astro";
import { getAnimeById } from "../../lib/anilist";
import { ArrowLeft, Play, Layers } from "lucide-astro";

export const prerender = false;

const { id } = Astro.params;
const animeId = Number(id);

let anime = null;
try {
  anime = await getAnimeById(animeId);
} catch (e) {
  console.error(e);
}

if (!anime) return Astro.redirect("/404");

const title = anime.title.romaji || anime.title.english;
const relations =
  anime.relations?.edges?.filter((e) => e.node.type === "ANIME") || [];
---

<Layout title={title}>
  <div class="player-page">
    <div class="top-nav">
      <a href="/" class="back-btn"><ArrowLeft size={24} /></a>
      <span class="nav-title">{title}</span>
    </div>

    <div class="video-container" id="video-wrapper">
      <div
        id="player-placeholder"
        class="placeholder"
        style={`background-image: url(${anime.bannerImage || anime.coverImage.extraLarge})`}
      >
        <div class="loading-overlay hidden" id="loading-overlay">
          <div class="spinner"></div>
          <span>Recherche des Ã©pisodes...</span>
        </div>
        <button
          id="start-btn"
          class="play-btn-large"
          data-id={anime.id}
          data-title={title}
        >
          <Play fill="currentColor" size={32} />
          <span>DÃ©marrer</span>
        </button>
      </div>
      <div id="fallback-ui" class="hidden fallback-ui">
        <h3>Source introuvable sur ce serveur ðŸ˜•</h3>
        <p>Essayez un lien alternatif ou un autre Ã©pisode.</p>
        <div class="fallback-actions">
          <a
            href={`https://anitaku.to/search.html?keyword=${encodeURIComponent(title)}`}
            target="_blank"
            class="btn-alt">GogoAnime</a
          >
          <a
            href={`https://hianime.to/search?keyword=${encodeURIComponent(title)}`}
            target="_blank"
            class="btn-alt">HiAnime</a
          >
        </div>
      </div>
      <video id="player" controls crossorigin playsinline></video>
    </div>

    <div class="container info-section">
      <h1 class="anime-title">{title}</h1>

      <div class="meta-row">
        <span class="meta-tag rating"
          >â˜… {anime.averageScore ? anime.averageScore / 10 : "?"}</span
        >
        <span class="meta-tag">{anime.status}</span>
        <span class="meta-tag">{anime.episodes || "?"} Eps</span>
        <span class="meta-tag">{anime.format}</span>
      </div>

      <p class="description" set:html={anime.description} />

      <!-- Relations / Saisons -->
      {
        relations.length > 0 && (
          <div class="relations-section">
            <h3 class="section-header">
              <Layers size={18} /> Saisons & Connexes
            </h3>
            <div class="relations-scroll">
              {relations.map((rel) => (
                <a href={`/anime/${rel.node.id}`} class="rel-card">
                  <img
                    src={rel.node.coverImage.medium}
                    alt={rel.node.title.romaji}
                  />
                  <div class="rel-info">
                    <span class="rel-type">
                      {rel.relationType.replace("_", " ")}
                    </span>
                    <span class="rel-title">{rel.node.title.romaji}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )
      }

      <!-- Liste des Ã©pisodes -->
      <h3 class="section-header">Ã‰pisodes</h3>
      <div id="episodes-grid" class="episodes-grid">
        <div class="loading-eps">Chargement de la liste...</div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Hls from "hls.js";
  import Plyr from "plyr";
  import "plyr/dist/plyr.css";

  const video = document.getElementById("player") as HTMLVideoElement;
  const startBtn = document.getElementById("start-btn");
  const loadingOverlay = document.getElementById("loading-overlay");
  const placeholder = document.getElementById("player-placeholder");
  const fallbackUI = document.getElementById("fallback-ui");
  const episodesGrid = document.getElementById("episodes-grid");
  let player: Plyr;

  const animeId = startBtn?.dataset.id;
  const animeTitle = startBtn?.dataset.title;

  async function init() {
    if (!animeId) return;
    loadingOverlay?.classList.remove("hidden");

    try {
      // On essaie de mapper l'anime via l'API Meta Anilist
      const res = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/info/${animeId}`
      );
      let data = await res.json();

      if (data.episodes && data.episodes.length > 0) {
        renderEpisodes(data.episodes);
      } else {
        // Si ID direct Ã©choue, on cherche par titre (plus efficace pour certains animes)
        const searchRes = await fetch(
          `https://api-consumet.vercel.app/meta/anilist/${encodeURIComponent(animeTitle!)}`
        );
        const searchData = await searchRes.json();
        if (searchData.results && searchData.results.length > 0) {
          const infoRes = await fetch(
            `https://api-consumet.vercel.app/meta/anilist/info/${searchData.results[0].id}`
          );
          const infoData = await infoRes.json();
          renderEpisodes(infoData.episodes);
        } else {
          throw new Error("No episodes found");
        }
      }
    } catch (e) {
      console.error(e);
      episodesGrid!.innerHTML =
        '<div class="error-eps">Liste des Ã©pisodes indisponible.</div>';
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function renderEpisodes(episodes: any[]) {
    episodesGrid!.innerHTML = "";
    episodes.forEach((ep: any) => {
      const btn = document.createElement("button");
      btn.className = "episode-card";
      btn.onclick = () => loadEpisode(ep.id);
      btn.innerHTML = `
             <div class="ep-thumb">
                ${ep.image ? `<img src="${ep.image}" />` : `<div class="no-img">${ep.number}</div>`}
             </div>
             <div class="ep-info">
               <span class="ep-num">Ã‰pisode ${ep.number}</span>
               <span class="ep-title">${ep.title || `Ã‰pisode ${ep.number}`}</span>
             </div>
          `;
      episodesGrid!.appendChild(btn);
    });
    if (startBtn) startBtn.onclick = () => loadEpisode(episodes[0].id);
  }

  async function loadEpisode(episodeId: string) {
    placeholder!.style.display = "flex";
    loadingOverlay?.classList.remove("hidden");
    fallbackUI?.classList.add("hidden");
    video.style.display = "none";

    try {
      const res = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/watch/${episodeId}`
      );
      const data = await res.json();
      const source =
        data.sources?.find(
          (s: any) => s.quality === "default" || s.quality === "1080p"
        ) || data.sources?.[0];

      if (source?.url) {
        setupPlayer(source.url, source.isM3U8 || source.url.includes(".m3u8"));
        placeholder!.style.display = "none";
        video.style.display = "block";
      } else {
        throw new Error("No stream");
      }
    } catch (e) {
      console.error(e);
      showFallback();
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function showFallback() {
    placeholder!.style.display = "none";
    video.style.display = "none";
    fallbackUI?.classList.remove("hidden");
  }

  function setupPlayer(sourceUrl: string, isHls: boolean) {
    if (player) player.destroy();
    if (isHls && Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(sourceUrl);
      hls.attachMedia(video);
      hls.on(Hls.Events.MANIFEST_PARSED, () => video.play().catch(() => {}));
    } else {
      video.src = sourceUrl;
      video.play().catch(() => {});
    }
    player = new Plyr(video, {
      controls: [
        "play-large",
        "play",
        "progress",
        "current-time",
        "mute",
        "volume",
        "fullscreen",
        "settings",
      ],
      settings: ["quality"],
    });
  }

  init();
</script>

<style>
  .hidden {
    display: none !important;
  }
  .player-page {
    padding-bottom: 100px;
  }

  .top-nav {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 50;
    background: linear-gradient(
      180deg,
      rgba(2, 6, 23, 0.9) 0%,
      transparent 100%
    );
  }

  .back-btn {
    color: white;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    display: flex;
    backdrop-filter: blur(4px);
  }

  .video-container {
    width: 100%;
    aspect-ratio: 16/9;
    background: #000;
    position: relative;
    max-height: 500px;
  }

  .placeholder {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .placeholder::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }

  .loading-overlay {
    position: absolute;
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    color: white;
  }

  .spinner {
    width: 30px;
    height: 30px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .fallback-ui {
    position: absolute;
    inset: 0;
    background: rgba(15, 23, 42, 0.95);
    z-index: 30;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    text-align: center;
  }
  .fallback-actions {
    display: flex;
    gap: 0.5rem;
  }
  .btn-alt {
    background: var(--color-primary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .info-section {
    padding-top: 1.5rem;
  }
  .anime-title {
    font-size: 1.6rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  .meta-row {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  .meta-tag {
    background: var(--color-bg-card);
    padding: 0.25rem 0.6rem;
    border-radius: var(--radius-sm);
    border: 1px solid rgba(255, 255, 244, 0.05);
  }

  /* Relations */
  .relations-section {
    margin: 1.5rem 0;
  }
  .relations-scroll {
    display: flex;
    gap: 0.75rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    scrollbar-width: none;
  }
  .rel-card {
    flex: 0 0 140px;
    background: var(--color-bg-card);
    border-radius: var(--radius-md);
    overflow: hidden;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .rel-card img {
    width: 100%;
    height: 80px;
    object-fit: cover;
    opacity: 0.8;
  }
  .rel-info {
    padding: 0.5rem;
  }
  .rel-type {
    font-size: 0.6rem;
    color: var(--color-primary);
    text-transform: uppercase;
    display: block;
    margin-bottom: 2px;
  }
  .rel-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .section-header {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.75rem;
  }
  :global(.episode-card) {
    background: var(--color-bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    overflow: hidden;
    padding: 0;
    cursor: pointer;
    text-align: left;
  }
  :global(.ep-thumb) {
    aspect-ratio: 16/9;
    background: #000;
    overflow: hidden;
    position: relative;
  }
  :global(.ep-thumb img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.7;
  }
  :global(.ep-info) {
    padding: 0.5rem;
  }
  :global(.ep-num) {
    font-size: 0.7rem;
    color: #94a3b8;
  }
  :global(.ep-title) {
    font-size: 0.8rem;
    font-weight: 600;
    color: white;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>
