---
import Layout from "../../layouts/Layout.astro";
import { getAnimeById } from "../../lib/anilist";
import { ArrowLeft, Play, Layers, Server, AlertCircle } from "lucide-astro";

export const prerender = false;

const { id } = Astro.params;
const animeId = Number(id);

let anime = null;
try {
  anime = await getAnimeById(animeId);
} catch (e) {}

if (!anime) return Astro.redirect("/404");

const title = anime.title.romaji || anime.title.english;
const relations =
  anime.relations?.edges?.filter((e) => e.node.type === "ANIME") || [];
const cover = anime.bannerImage || anime.coverImage.extraLarge;
---

<Layout title={title}>
  <div class="player-page">
    <div class="top-nav">
      <a href="/" class="back-btn"><ArrowLeft size={24} /></a>
      <span class="nav-title">{title}</span>
    </div>

    <!-- ZONE LECTEUR VIDEO -->
    <div class="video-section">
      <div class="video-container" id="video-wrapper">
        <!-- Overlay de démarrage -->
        <div
          id="player-placeholder"
          class="placeholder"
          style={`background-image: url(${cover})`}
        >
          <div class="loading-overlay hidden" id="loading-overlay">
            <div class="spinner"></div>
            <span id="loading-text">Recherche des meilleurs serveurs...</span>
          </div>
          <button
            id="start-btn"
            class="play-btn-large"
            data-id={anime.id}
            data-title={title}
            data-max-ep={anime.episodes}
          >
            <Play fill="currentColor" size={32} />
            <span>Lancer l'épisode 1</span>
          </button>
        </div>

        <!-- Lecteur Principal (HLS/Plyr) -->
        <video id="player" controls crossorigin playsinline></video>

        <!-- Lecteur Alternatif (Embed Iframe) -->
        <iframe
          id="player-embed"
          class="hidden"
          frameborder="0"
          allowfullscreen
          allow="autoplay; encrypted-media"></iframe>
      </div>

      <!-- CONTROLES DES SOURCES -->
      <div class="source-controls hidden" id="source-controls">
        <div class="current-ep-info">
          <span id="display-ep">Épisode 1</span>
        </div>
        <div class="server-list">
          <button class="server-btn active" data-server="1"
            >Serveur 1 (HD)</button
          >
          <button class="server-btn" data-server="2">Serveur 2 (Multi)</button>
          <button class="server-btn" data-server="3">Serveur 3 (Embed)</button>
        </div>
      </div>
    </div>

    <div class="container info-section">
      <h1 class="anime-title">{title}</h1>

      <div class="meta-row">
        <span class="meta-tag rating"
          >★ {anime.averageScore ? anime.averageScore / 10 : "?"}</span
        >
        <span class="meta-tag">{anime.status}</span>
        <span class="meta-tag">{anime.episodes || "?"} Eps</span>
        <span class="meta-tag">{anime.format}</span>
        <span class="meta-tag lang-tag">VOSTFR / VF</span>
      </div>

      <p class="description" set:html={anime.description} />

      <!-- Saisons / Relations -->
      {
        relations.length > 0 && (
          <div class="relations-section">
            <h3 class="section-header">
              <Layers size={18} /> Saisons & Connexes
            </h3>
            <div class="relations-scroll">
              {relations.map((rel) => (
                <a href={`/anime/${rel.node.id}`} class="rel-card">
                  <img
                    src={rel.node.coverImage.medium}
                    alt={rel.node.title.romaji}
                    loading="lazy"
                  />
                  <div class="rel-info">
                    <span class="rel-type">{rel.relationType}</span>
                    <span class="rel-title">{rel.node.title.romaji}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )
      }

      <!-- Liste des épisodes -->
      <h3 class="section-header">Épisodes</h3>
      <div id="episodes-grid" class="episodes-grid">
        <div class="loading-eps">Recherche des épisodes disponibles...</div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Hls from "hls.js";
  import Plyr from "plyr";
  import "plyr/dist/plyr.css";

  const video = document.getElementById("player") as HTMLVideoElement;
  const embed = document.getElementById("player-embed") as HTMLIFrameElement;
  const startBtn = document.getElementById("start-btn");
  const loadingOverlay = document.getElementById("loading-overlay");
  const loadingText = document.getElementById("loading-text");
  const placeholder = document.getElementById("player-placeholder");
  const episodesGrid = document.getElementById("episodes-grid");
  const sourceControls = document.getElementById("source-controls");
  const displayEp = document.getElementById("display-ep");
  const serverBtns = document.querySelectorAll(".server-btn");

  let player: Plyr;
  let activeEpisodeId: string | null = null;
  let activeEpisodeNum: number = 1;
  let currentServer: number = 1;

  const animeId = startBtn?.dataset.id;
  const animeTitle = startBtn?.dataset.title;
  const totalEps = Number(startBtn?.dataset.maxEp || 12);

  // APIs Multiples pour plus de stabilité
  const APIS = [
    "https://api-consumet.vercel.app",
    "https://consumet-api-nine.vercel.app",
    "https://api.consumet.org",
  ];

  async function callAPI(path: string) {
    for (const api of APIS) {
      try {
        const res = await fetch(`${api}${path}`);
        if (res.ok) return await res.json();
      } catch (e) {}
    }
    throw new Error("Toutes les sources ont échoué.");
  }

  async function loadEpisodeList() {
    if (!animeId) return;
    loadingOverlay?.classList.remove("hidden");

    try {
      loadingText!.innerText = "Récupération de la liste...";
      const data = await callAPI(`/meta/anilist/info/${animeId}`);
      if (data.episodes && data.episodes.length > 0) {
        renderEpisodes(data.episodes);
      } else {
        throw new Error();
      }
    } catch (e) {
      // Manual fallback if API fails
      const manualEps = [];
      for (let i = 1; i <= (totalEps || 12); i++) {
        manualEps.push({ id: `manual-${i}`, number: i, title: `Épisode ${i}` });
      }
      renderEpisodes(manualEps);
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function renderEpisodes(eps: any[]) {
    episodesGrid!.innerHTML = "";
    eps.forEach((ep) => {
      const btn = document.createElement("button");
      btn.className = "episode-card";
      btn.onclick = () => playEpisode(ep.id, ep.number);
      btn.innerHTML = `
        <div class="ep-thumb"><div class="no-img">${ep.number}</div></div>
        <div class="ep-info">
          <span class="ep-num">Épisode ${ep.number}</span>
          <span class="ep-title">${ep.title || `Épisode ${ep.number}`}</span>
        </div>`;
      episodesGrid!.appendChild(btn);
    });
    if (startBtn) startBtn.onclick = () => playEpisode(eps[0].id, 1);
  }

  async function playEpisode(id: string | null, num: number) {
    activeEpisodeId = id;
    activeEpisodeNum = num;
    displayEp!.innerText = `Épisode ${num}`;

    placeholder!.style.display = "flex";
    loadingOverlay?.classList.remove("hidden");
    video.style.display = "none";
    embed.classList.add("hidden");
    sourceControls!.classList.remove("hidden");

    try {
      if (currentServer === 1) await loadServer1(id, num);
      else if (currentServer === 2) await loadServer2(id, num);
      else loadServer3(num);
    } catch (e) {
      console.error(e);
      loadServer3(num); // Force embed if servers fail
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  // SERVEUR 1 : Consumet HLS
  async function loadServer1(id: string | null, num: number) {
    if (!id || id.startsWith("manual")) throw new Error();
    const data = await callAPI(`/meta/anilist/watch/${id}`);
    const source =
      data.sources?.find(
        (s: any) => s.quality === "default" || s.quality === "1080p"
      ) || data.sources?.[0];
    if (!source) throw new Error();
    setupHLS(source.url);
  }

  // SERVEUR 2 : GogoAnime direct
  async function loadServer2(id: string | null, num: number) {
    loadingText!.innerText = "Recherche Serveur 2...";
    const slug = animeTitle?.toLowerCase().replace(/[^a-z0-9]/g, "-");
    const data = await callAPI(`/anime/gogoanime/watch/${slug}-episode-${num}`);
    if (!data.sources || data.sources.length === 0) throw new Error();
    setupHLS(data.sources[0].url);
  }

  // SERVEUR 3 : Embed (Anime-Sama Style)
  function loadServer3(num: number) {
    loadingText!.innerText = "Passage au lecteur de secours...";
    placeholder!.style.display = "none";
    embed.classList.remove("hidden");
    const slug = animeTitle?.toLowerCase().replace(/[^a-z0-9]/g, "-");
    embed.src = `https://anitaku.to/embed/${slug}-episode-${num}`;
    // Si anitaku ne marche pas, on peut tester d'autres embed providers ici
  }

  function setupHLS(url: string) {
    if (player) player.destroy();
    placeholder!.style.display = "none";
    video.style.display = "block";

    if (Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(url);
      hls.attachMedia(video);
    } else {
      video.src = url;
    }
    player = new Plyr(video, {
      controls: [
        "play-large",
        "play",
        "progress",
        "current-time",
        "mute",
        "volume",
        "fullscreen",
        "settings",
      ],
    });
    video.play().catch(() => {});
  }

  // GESTION DES BOUTONS SERVEURS
  serverBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      serverBtns.forEach((b) => b.classList.remove("active"));
      btn.classList.add("active");
      currentServer = Number((btn as HTMLElement).dataset.server);
      playEpisode(activeEpisodeId, activeEpisodeNum);
    });
  });

  loadEpisodeList();
</script>

<style>
  .hidden {
    display: none !important;
  }
  .player-page {
    padding-bottom: 120px;
  }

  .top-nav {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 50;
  }
  .back-btn {
    color: white;
    background: rgba(0, 0, 0, 0.5);
    padding: 0.5rem;
    border-radius: 8px;
    display: flex;
    backdrop-filter: blur(4px);
  }
  .nav-title {
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  /* VIDEO SECTION */
  .video-section {
    background: #000;
    padding: 0;
    margin-bottom: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }
  .video-container {
    width: 100%;
    aspect-ratio: 16/9;
    position: relative;
    max-width: 1100px;
    margin: 0 auto;
    overflow: hidden;
  }

  .placeholder {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .placeholder::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(2px);
  }

  #player,
  #player-embed {
    width: 100%;
    height: 100%;
    display: none;
  }
  #player-embed {
    display: block;
  } /* if not hidden */

  .play-btn-large {
    position: relative;
    z-index: 10;
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-weight: 700;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .loading-overlay {
    position: absolute;
    z-index: 20;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }
  .spinner {
    width: 40px;
    height: 40px;
    border: 4px solid rgba(255, 255, 255, 0.1);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* SOURCE CONTROLS */
  .source-controls {
    background: #0f172a;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  .server-list {
    display: flex;
    gap: 0.5rem;
  }
  .server-btn {
    background: #1e293b;
    color: #94a3b8;
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }
  .server-btn.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }
  .current-ep-info {
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
  }

  /* INFO SECTION */
  .anime-title {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 0.75rem;
    color: white;
  }
  .meta-row {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }
  .meta-tag {
    background: #1e293b;
    color: #94a3b8;
    padding: 0.3rem 0.8rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
  }
  .rating {
    color: #fbbf24;
    background: rgba(251, 191, 36, 0.1);
  }
  .lang-tag {
    color: var(--color-primary);
    background: rgba(59, 130, 246, 0.1);
  }
  .description {
    color: #cbd5e1;
    line-height: 1.6;
    font-size: 0.95rem;
    margin-bottom: 3rem;
    max-height: 154px;
    overflow-y: auto;
  }

  /* EPISODES */
  .section-header {
    font-size: 1.4rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1.5rem;
    border-left: 5px solid var(--color-primary);
    padding-left: 1rem;
  }
  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1rem;
  }
  :global(.episode-card) {
    background: #1e293b;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    padding: 0;
    cursor: pointer;
    text-align: left;
    transition: transform 0.2s;
  }
  :global(.episode-card:hover) {
    transform: translateY(-5px);
    border-color: var(--color-primary);
  }
  :global(.ep-thumb) {
    aspect-ratio: 16/9;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  :global(.no-img) {
    font-size: 1.5rem;
    font-weight: 900;
    color: #334155;
  }
  :global(.ep-info) {
    padding: 0.75rem;
  }
  :global(.ep-num) {
    color: var(--color-primary);
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
  }
  :global(.ep-title) {
    color: white;
    font-size: 0.85rem;
    font-weight: 600;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* SEASONS */
  .relations-section {
    margin-bottom: 3rem;
  }
  .relations-scroll {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scrollbar-width: none;
  }
  .rel-card {
    flex: 0 0 130px;
    text-decoration: none;
    border-radius: 10px;
    overflow: hidden;
    background: #1e293b;
    transition: transform 0.2s;
  }
  .rel-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  .rel-info {
    padding: 0.5rem;
  }
  .rel-type {
    font-size: 0.6rem;
    color: var(--color-primary);
    font-weight: 800;
    text-transform: uppercase;
    display: block;
  }
  .rel-title {
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
  }
</style>
