    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }

  .loading-overlay {
    position: absolute;
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    color: white;
  }
  .spinner {
    width: 30px;
    height: 30px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .fallback-ui {
    position: absolute;
    inset: 0;
    background: rgba(15, 23, 42, 0.98);
    z-index: 30;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    text-align: center;
  }
  .btn-alt {
    background: var(--color-primary);
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .info-section {
    padding-top: 1.5rem;
  }
  .anime-title {
    font-size: 1.6rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }
  .meta-row {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  .meta-tag {
    background: #1e293b;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }
  .description {
    color: #94a3b8;
    line-height: 1.6;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    height: 100px;
    overflow-y: auto;
  }

  .relations-section {
    margin: 2rem 0;
  }
