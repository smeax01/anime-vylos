---
import Layout from "../../layouts/Layout.astro";
import { getAnimeById } from "../../lib/anilist";
import { ArrowLeft, Play, Layers } from "lucide-astro";

export const prerender = false;

const { id } = Astro.params;
const animeId = Number(id);

let anime = null;
try {
  anime = await getAnimeById(animeId);
} catch (e) {}

if (!anime) return Astro.redirect("/404");

const title = anime.title.romaji || anime.title.english;
const relations =
  anime.relations?.edges?.filter((e) => e.node.type === "ANIME") || [];
---

<Layout title={title}>
  <div class="player-page">
    <div class="top-nav">
      <a href="/" class="back-btn"><ArrowLeft size={24} /></a>
      <span class="nav-title">{title}</span>
    </div>

    <div class="video-container" id="video-wrapper">
      <div
        id="player-placeholder"
        class="placeholder"
        style={`background-image: url(${anime.bannerImage || anime.coverImage.extraLarge})`}
      >
        <div class="loading-overlay hidden" id="loading-overlay">
          <div class="spinner"></div>
          <span>Initialisation du flux...</span>
        </div>
        <button
          id="start-btn"
          class="play-btn-large"
          data-id={anime.id}
          data-title={title}
          data-max-ep={anime.episodes}
        >
          <Play fill="currentColor" size={32} />
          <span>Lancer l'Ã©pisode 1</span>
        </button>
      </div>
      <div id="fallback-ui" class="hidden fallback-ui">
        <h3>Source interne indisponible ðŸ˜•</h3>
        <p>Utilisez un lecteur externe sÃ©curisÃ© pour cet anime :</p>
        <div class="fallback-actions">
          <a id="fb-gogo" href="#" target="_blank" class="btn-alt">GogoAnime</a>
          <a id="fb-hi" href="#" target="_blank" class="btn-alt">HiAnime</a>
        </div>
      </div>
      <video id="player" controls crossorigin playsinline></video>
    </div>

    <div class="container info-section">
      <h1 class="anime-title">{title}</h1>
      <div class="meta-row">
        <span class="meta-tag rating"
          >â˜… {anime.averageScore ? anime.averageScore / 10 : "?"}</span
        >
        <span class="meta-tag">{anime.status}</span>
        <span class="meta-tag">{anime.episodes || "?"} Eps</span>
        <span class="meta-tag">{anime.format}</span>
      </div>
      <p class="description" set:html={anime.description} />

      {
        relations.length > 0 && (
          <div class="relations-section">
            <h3 class="section-header">
              <Layers size={18} /> Saisons & Suites
            </h3>
            <div class="relations-scroll">
              {relations.map((rel) => (
                <a href={`/anime/${rel.node.id}`} class="rel-card">
                  <img
                    src={rel.node.coverImage.medium}
                    alt={rel.node.title.romaji}
                    loading="lazy"
                  />
                  <div class="rel-info">
                    <span class="rel-type">{rel.relationType}</span>
                    <span class="rel-title">{rel.node.title.romaji}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )
      }

      <h3 class="section-header">Ã‰pisodes</h3>
      <div id="episodes-grid" class="episodes-grid">
        <div class="loading-eps">Recherche des Ã©pisodes...</div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Hls from "hls.js";
  import Plyr from "plyr";
  import "plyr/dist/plyr.css";

  const video = document.getElementById("player") as HTMLVideoElement;
  const startBtn = document.getElementById("start-btn");
  const loadingOverlay = document.getElementById("loading-overlay");
  const placeholder = document.getElementById("player-placeholder");
  const fallbackUI = document.getElementById("fallback-ui");
  const episodesGrid = document.getElementById("episodes-grid");

  const fbGogo = document.getElementById("fb-gogo") as HTMLAnchorElement;
  const fbHi = document.getElementById("fb-hi") as HTMLAnchorElement;

  let player: Plyr;
  const animeId = startBtn?.dataset.id;
  const animeTitle = startBtn?.dataset.title;
  const maxEp = Number(startBtn?.dataset.maxEp || 12);

  // Fallback links
  const updateFallbacks = (epNum = 1) => {
    fbGogo.href = `https://anitaku.to/search.html?keyword=${encodeURIComponent(animeTitle!)}`;
    fbHi.href = `https://hianime.to/search?keyword=${encodeURIComponent(animeTitle!)}`;
  };

  async function fetchAnimeInfo() {
    if (!animeId) return;
    loadingOverlay?.classList.remove("hidden");
    updateFallbacks(1);

    try {
      const res = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/info/${animeId}`
      );
      const data = await res.json();

      if (data.episodes && data.episodes.length > 0) {
        renderEpisodes(data.episodes);
      } else {
        throw new Error("No episodes in API");
      }
    } catch (e) {
      console.warn("API direct ID failed, using manual episode generation.");
      generateManualEpisodes();
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function generateManualEpisodes() {
    episodesGrid!.innerHTML = "";
    const episodes = [];
    for (let i = 1; i <= maxEp; i++) {
      episodes.push({
        id: `${animeTitle}-episode-${i}`,
        number: i,
        title: `Ã‰pisode ${i}`,
      });
    }
    renderEpisodes(episodes, true);
  }

  function renderEpisodes(episodes: any[], isManual = false) {
    episodesGrid!.innerHTML = "";
    episodes.forEach((ep) => {
      const btn = document.createElement("button");
      btn.className = "episode-card";
      btn.onclick = () =>
        isManual ? showFallback() : loadEpisode(ep.id, ep.number);
      btn.innerHTML = `
        <div class="ep-thumb"><div class="no-img">${ep.number}</div></div>
        <div class="ep-info">
          <span class="ep-num">Ã‰pisode ${ep.number}</span>
          <span class="ep-title">${ep.title || `Ã‰pisode ${ep.number}`}</span>
        </div>
      `;
      episodesGrid!.appendChild(btn);
    });

    if (startBtn) {
      startBtn.onclick = () =>
        isManual ? showFallback() : loadEpisode(episodes[0].id, 1);
    }
  }

  async function loadEpisode(id: string, num: number) {
    placeholder!.style.display = "flex";
    loadingOverlay?.classList.remove("hidden");
    fallbackUI?.classList.add("hidden");
    video.style.display = "none";
    updateFallbacks(num);

    try {
      const res = await fetch(
        `https://api-consumet.vercel.app/meta/anilist/watch/${id}`
      );
      const data = await res.json();
      const source =
        data.sources?.find(
          (s: any) => s.quality === "1080p" || s.quality === "720p"
        ) || data.sources?.[0];

      if (source?.url) {
        setupPlayer(source.url, source.isM3U8 || source.url.includes(".m3u8"));
        placeholder!.style.display = "none";
        video.style.display = "block";
      } else {
        throw new Error();
      }
    } catch (e) {
      showFallback();
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function showFallback() {
    placeholder!.style.display = "none";
    video.style.display = "none";
    fallbackUI?.classList.remove("hidden");
    loadingOverlay?.classList.add("hidden");
  }

  function setupPlayer(url: string, isHls: boolean) {
    if (player) player.destroy();
    if (isHls && Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(url);
      hls.attachMedia(video);
    } else {
      video.src = url;
    }
    player = new Plyr(video, {
      controls: [
        "play-large",
        "play",
        "progress",
        "current-time",
        "mute",
        "volume",
        "fullscreen",
        "settings",
      ],
    });
    video.play().catch(() => {});
  }

  fetchAnimeInfo();
</script>

<style>
  .hidden {
    display: none !important;
  }
  .player-page {
    padding-bottom: 100px;
  }
  .top-nav {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 50;
    background: linear-gradient(
      180deg,
      rgba(2, 6, 23, 0.9) 0%,
      transparent 100%
    );
  }
  .back-btn {
    color: white;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    display: flex;
    backdrop-filter: blur(4px);
  }
  .nav-title {
    font-weight: 600;
    color: white;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .video-container {
    width: 100%;
    aspect-ratio: 16/9;
    background: #000;
    position: relative;
    max-height: 500px;
  }
  .placeholder {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0f172a;
  }
