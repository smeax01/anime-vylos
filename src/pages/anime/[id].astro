---
import Layout from "../../layouts/Layout.astro";
import { getAnimeById } from "../../lib/anilist";
import { ArrowLeft, Play, Layers } from "lucide-astro";

export const prerender = false;

const { id } = Astro.params;
const animeId = Number(id);

let anime = null;
try {
  anime = await getAnimeById(animeId);
} catch (e) {}

if (!anime) return Astro.redirect("/404");

const title = anime.title.romaji || anime.title.english;
const relations =
  anime.relations?.edges?.filter((e) => e.node.type === "ANIME") || [];
---

<Layout title={title}>
  <div class="player-page">
    <div class="top-nav">
      <a href="/" class="back-btn"><ArrowLeft size={24} /></a>
      <span class="nav-title">{title}</span>
    </div>

    <div class="video-container" id="video-wrapper">
      <!-- Placeholder / Loading -->
      <div
        id="player-placeholder"
        class="placeholder"
        style={`background-image: url(${anime.bannerImage || anime.coverImage.extraLarge})`}
      >
        <div class="loading-overlay hidden" id="loading-overlay">
          <div class="spinner"></div>
          <span id="loading-text">Recherche du flux...</span>
        </div>
        <button
          id="start-btn"
          class="play-btn-large"
          data-id={anime.id}
          data-title={title}
          data-max-ep={anime.episodes}
        >
          <Play fill="currentColor" size={32} />
          <span>Lancer la lecture</span>
        </button>
      </div>

      <!-- Lecteur Direct (Plyr) -->
      <video id="player" controls crossorigin playsinline></video>

      <!-- Lecteur Embed (Fallback interne) -->
      <iframe
        id="player-embed"
        class="hidden"
        frameborder="0"
        allowfullscreen
        allow="autoplay; encrypted-media"></iframe>
    </div>

    <div class="container info-section">
      <h1 class="anime-title">{title}</h1>
      <div class="meta-row">
        <span class="meta-tag rating"
          >★ {anime.averageScore ? anime.averageScore / 10 : "?"}</span
        >
        <span class="meta-tag">{anime.status}</span>
        <span class="meta-tag">{anime.episodes || "?"} Eps</span>
        <span class="meta-tag">{anime.format}</span>
      </div>
      <p class="description" set:html={anime.description} />

      {
        relations.length > 0 && (
          <div class="relations-section">
            <h3 class="section-header">
              <Layers size={18} /> Saisons & Suites
            </h3>
            <div class="relations-scroll">
              {relations.map((rel) => (
                <a href={`/anime/${rel.node.id}`} class="rel-card">
                  <img
                    src={rel.node.coverImage.medium}
                    alt={rel.node.title.romaji}
                    loading="lazy"
                  />
                  <div class="rel-info">
                    <span class="rel-type">{rel.relationType}</span>
                    <span class="rel-title">{rel.node.title.romaji}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )
      }

      <h3 class="section-header">Épisodes</h3>
      <div id="episodes-grid" class="episodes-grid">
        <div class="loading-eps">Chargement...</div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Hls from "hls.js";
  import Plyr from "plyr";
  import "plyr/dist/plyr.css";

  const video = document.getElementById("player") as HTMLVideoElement;
  const embed = document.getElementById("player-embed") as HTMLIFrameElement;
  const startBtn = document.getElementById("start-btn");
  const loadingOverlay = document.getElementById("loading-overlay");
  const loadingText = document.getElementById("loading-text");
  const placeholder = document.getElementById("player-placeholder");
  const episodesGrid = document.getElementById("episodes-grid");

  let player: Plyr;
  const animeId = startBtn?.dataset.id;
  const animeTitle = startBtn?.dataset.title;
  const maxEpCount = Number(startBtn?.dataset.maxEp || 0);

  const API_BASE = "https://api-consumet.vercel.app";

  async function fetchWithFallback(path: string) {
    const instances = [
      "https://api-consumet.vercel.app",
      "https://consumet-api-nine.vercel.app",
      "https://api-consumet-org.vercel.app",
    ];
    for (const base of instances) {
      try {
        const res = await fetch(`${base}${path}`);
        if (res.ok) return await res.json();
      } catch (e) {}
    }
    throw new Error("API fail");
  }

  async function fetchEpisodes() {
    if (!animeId) return;
    loadingOverlay?.classList.remove("hidden");

    try {
      loadingText!.innerText = "Recherche des épisodes...";
      const data = await fetchWithFallback(`/meta/anilist/info/${animeId}`);

      if (data.episodes && data.episodes.length > 0) {
        renderEpisodes(data.episodes);
      } else {
        // Try Gogo search directly
        const search = await fetchWithFallback(
          `/anime/gogoanime/${encodeURIComponent(animeTitle!)}`
        );
        if (search.results && search.results.length > 0) {
          const info = await fetchWithFallback(
            `/anime/gogoanime/info/${search.results[0].id}`
          );
          renderEpisodes(info.episodes);
        } else {
          throw new Error();
        }
      }
    } catch (e) {
      renderManualEpisodes();
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function renderManualEpisodes() {
    const list = [];
    const count = maxEpCount > 0 ? maxEpCount : 12;
    for (let i = 1; i <= count; i++) {
      list.push({ id: null, number: i, title: `Épisode ${i}` });
    }
    renderEpisodes(list);
  }

  function renderEpisodes(episodes: any[]) {
    episodesGrid!.innerHTML = "";
    episodes.forEach((ep) => {
      const btn = document.createElement("button");
      btn.className = "episode-card";
      btn.onclick = () => loadEpisode(ep.id, ep.number);
      btn.innerHTML = `
        <div class="ep-thumb"><div class="no-img">${ep.number}</div></div>
        <div class="ep-info">
          <span class="ep-num">Épisode ${ep.number}</span>
          <span class="ep-title">${ep.title || `Épisode ${ep.number}`}</span>
        </div>
      `;
      episodesGrid!.appendChild(btn);
    });

    if (startBtn) {
      startBtn.onclick = () => loadEpisode(episodes[0].id, 1);
    }
  }

  async function loadEpisode(id: string | null, num: number) {
    loadingOverlay?.classList.remove("hidden");
    loadingText!.innerText = `Chargement de l'épisode ${num}...`;
    video.style.display = "none";
    embed.classList.add("hidden");
    placeholder!.style.display = "flex";

    if (!id) {
      // Manual mode: try to find an embed via alternative site
      showEmbedFallback(num);
      return;
    }

    try {
      const data = await fetchWithFallback(`/meta/anilist/watch/${id}`);
      const source =
        data.sources?.find(
          (s: any) => s.quality === "1080p" || s.quality === "default"
        ) || data.sources?.[0];

      if (source?.url) {
        setupPlayer(source.url, source.isM3U8 || source.url.includes(".m3u8"));
        placeholder!.style.display = "none";
        video.style.display = "block";
      } else {
        throw new Error();
      }
    } catch (e) {
      showEmbedFallback(num);
    } finally {
      loadingOverlay?.classList.add("hidden");
    }
  }

  function showEmbedFallback(num: number) {
    // We use a known stable embed provider or just try a different API
    // For now, let's try to fetch an embed URL from the API if possible
    // If not, we use a reliable iframe link
    loadingText!.innerText =
      "Flux direct indisponible, passage au lecteur de secours...";

    // Example with a common embed structure
    const embedUrl = `https://www.documentcloud.org/viewer/`; // Just a placeholder for the logic
    // Actually, let's use a real logic:
    // We can try to use the 'GogoAnime' embed from the API
    fetchWithFallback(
      `/anime/gogoanime/watch/${animeTitle?.toLowerCase().replace(/ /g, "-")}-episode-${num}`
    )
      .then((data) => {
        if (data.headers?.Referer) {
          embed.src = data.headers.Referer;
          placeholder!.style.display = "none";
          embed.classList.remove("hidden");
        } else {
          // Last resort: embed anilist player or similar if available
          embed.src = `https://anitaku.to/embed/${animeTitle?.toLowerCase().replace(/ /g, "-")}-episode-${num}`; // Experimental
          placeholder!.style.display = "none";
          embed.classList.remove("hidden");
        }
      })
      .catch(() => {
        // Really last resort
        placeholder!.innerHTML = `<div style="text-align:center; padding:20px;">
            <p>Impossible de lire l'épisode ${num} en direct.</p>
            <a href="https://anitaku.to/search.html?keyword=${encodeURIComponent(animeTitle!)}" target="_blank" style="color:var(--color-primary); font-weight:bold;">Tenter un lecteur externe</a>
        </div>`;
      });
  }

  function setupPlayer(url: string, isHls: boolean) {
    if (player) player.destroy();
    if (isHls && Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(url);
      hls.attachMedia(video);
    } else {
      video.src = url;
    }
    player = new Plyr(video, {
      controls: [
        "play-large",
        "play",
        "progress",
        "current-time",
        "mute",
        "volume",
        "fullscreen",
        "settings",
      ],
    });
    video.play().catch(() => {});
  }

  fetchEpisodes();
</script>

<style>
  .hidden {
    display: none !important;
  }
  .player-page {
    padding-bottom: 100px;
  }
  .top-nav {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 50;
    background: linear-gradient(
      180deg,
      rgba(2, 6, 23, 0.9) 0%,
      transparent 100%
    );
  }
  .back-btn {
    color: white;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    display: flex;
    backdrop-filter: blur(4px);
  }
  .nav-title {
    font-weight: 600;
    color: white;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .video-container {
    width: 100%;
    aspect-ratio: 16/9;
    background: #000;
    position: relative;
    max-height: 500px;
  }
  .placeholder {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0f172a;
  }
  .placeholder::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.65);
    backdrop-filter: blur(2px);
  }

  #player-embed {
    width: 100%;
    height: 100%;
  }

  .loading-overlay {
    position: absolute;
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    color: white;
    text-align: center;
    padding: 1rem;
  }
  .spinner {
    width: 30px;
    height: 30px;
    border: 3px solid rgba(255, 255, 255, 0.2);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .info-section {
    padding-top: 2rem;
  }
  .anime-title {
    font-size: 1.8rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
  }
  .meta-row {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    font-size: 0.85rem;
    color: #94a3b8;
  }
  .meta-tag {
    background: #1e293b;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }
  .description {
    color: #cbd5e1;
    line-height: 1.7;
    font-size: 0.95rem;
    margin-bottom: 2.5rem;
    max-height: 150px;
    overflow-y: auto;
  }

  .relations-section {
    margin-bottom: 3rem;
  }
  .relations-scroll {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scrollbar-width: none;
  }
  .rel-card {
    flex: 0 0 120px;
    text-decoration: none;
    background: #1e293b;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .rel-card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }
  .rel-info {
    padding: 0.5rem;
  }
  .rel-type {
    font-size: 0.6rem;
    color: var(--color-primary);
    font-weight: 800;
    text-transform: uppercase;
    display: block;
    margin-bottom: 2px;
  }
  .rel-title {
    font-size: 0.75rem;
    color: white;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  .section-header {
    font-size: 1.3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--color-primary);
    padding-left: 0.75rem;
    color: white;
  }
  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 1rem;
  }
  :global(.episode-card) {
    background: #1e293b;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    overflow: hidden;
    padding: 0;
    cursor: pointer;
    text-align: left;
    transition: all 0.2s;
  }
  :global(.episode-card:hover) {
    border-color: var(--color-primary);
    transform: translateY(-3px);
  }
  :global(.no-img) {
    aspect-ratio: 16/9;
    background: #0f172a;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 900;
    color: #334155;
  }
  :global(.ep-info) {
    padding: 0.75rem;
  }
  :global(.ep-num) {
    font-size: 0.7rem;
    color: var(--color-primary);
    font-weight: 800;
    text-transform: uppercase;
  }
  :global(.ep-title) {
    font-size: 0.85rem;
    font-weight: 600;
    color: white;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .play-btn-large {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
    background: var(--color-primary);
    border: none;
    color: white;
    padding: 1.2rem 2.5rem;
    border-radius: var(--radius-md);
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
  }
</style>
