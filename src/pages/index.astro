---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import AnimeCard from "../components/AnimeCard.astro";
import {
  getPopularAnime,
  getTrendingAnime,
  getLatestAnime,
} from "../lib/anilist";
import { Star, History, Zap, Clock } from "lucide-astro";

export const prerender = false;

// Fetch Data Server-Side
let popular: any[] = [];
let simulcasts: any[] = [];
let latest: any[] = [];
let error: string | null = null;

try {
  const [popData, simData, latData] = await Promise.all([
    getPopularAnime(20),
    getTrendingAnime(20),
    getLatestAnime(20),
  ]);

  // Filter out any anime missing essential data or images
  const clean = (list: any[]) =>
    list.filter(
      (a) =>
        a && a.id && a.coverImage?.large && a.description && a.averageScore > 40
    );

  popular = clean(popData).slice(0, 18);
  simulcasts = clean(simData).slice(0, 18);
  latest = clean(latData).slice(0, 18);
} catch (e) {
  console.error("Failed to fetch AniList data:", e);
  error = "Mode hors ligne ou erreur API.";
}

// Select Hero Item (prioritize one with a valid banner image)
const heroAnime =
  popular.find((a) => a.bannerImage && a.description) || popular[0];
const heroProps = heroAnime
  ? {
      id: heroAnime.id,
      title: heroAnime.title.romaji || heroAnime.title.english,
      description: heroAnime.description || "Aucune description disponible.",
      image:
        heroAnime.bannerImage ||
        heroAnime.coverImage.extraLarge ||
        heroAnime.coverImage.large ||
        "",
      genres: heroAnime.genres || [],
      rating: heroAnime.averageScore || 0,
    }
  : null;
---

<Layout title="Accueil">
  {
    heroProps ? (
      <Hero {...heroProps} />
    ) : (
      <div class="error-banner">
        <p>{error || "Chargement..."}</p>
      </div>
    )
  }

  <div class="content-wrapper">
    <!-- History Section -->
    <section id="history-section" class="container section hidden">
      <div class="section-header">
        <h2 class="section-title">
          <History class="icon-history" size={24} />
          Reprendre la lecture
        </h2>
        <div class="scroll-controls">
          <button class="scroll-btn prev" data-target="continue-watching-list">
            <span class="sr-only">Précédent</span>
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m15 18-6-6 6-6"></path></svg
            >
          </button>
          <button class="scroll-btn next" data-target="continue-watching-list">
            <span class="sr-only">Suivant</span>
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m9 18 6-6-6-6"></path></svg
            >
          </button>
        </div>
      </div>
      <div id="continue-watching-list" class="horizontal-scroll">
        <!-- Cards injected by JS -->
      </div>
    </section>

    <!-- Simulcasts -->
    <section class="container section">
      <div class="section-header">
        <h2 class="section-title">
          <Zap class="icon-zap" size={24} />
          Simulcasts de la saison
        </h2>
        <div class="scroll-controls">
          <button class="scroll-btn prev" data-target="simulcast-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m15 18-6-6 6-6"></path></svg
            >
          </button>
          <button class="scroll-btn next" data-target="simulcast-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m9 18 6-6-6-6"></path></svg
            >
          </button>
        </div>
      </div>
      <div id="simulcast-list" class="horizontal-scroll">
        {
          simulcasts.map((anime) => (
            <a href={`/anime/${anime.id}`} class="card-link">
              <AnimeCard
                image={anime.coverImage.large}
                title={anime.title.romaji || anime.title.english}
                type={`${anime.format || "TV"} • ${anime.genres[0] || "Anime"}`}
                rating={
                  anime.averageScore ? anime.averageScore / 10 : undefined
                }
              />
            </a>
          ))
        }
      </div>
    </section>

    <!-- Latest Added -->
    <section class="container section">
      <div class="section-header">
        <h2 class="section-title">
          <Clock class="icon-latest" size={24} />
          Dernières Sorties
        </h2>
        <div class="scroll-controls">
          <button class="scroll-btn prev" data-target="latest-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m15 18-6-6 6-6"></path></svg
            >
          </button>
          <button class="scroll-btn next" data-target="latest-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m9 18 6-6-6-6"></path></svg
            >
          </button>
        </div>
      </div>
      <div id="latest-list" class="horizontal-scroll">
        {
          latest.map((anime) => (
            <a href={`/anime/${anime.id}`} class="card-link">
              <AnimeCard
                image={anime.coverImage.large}
                title={anime.title.romaji || anime.title.english}
                type={`${anime.format || "TV"} • ${anime.genres[0] || "Anime"}`}
                rating={
                  anime.averageScore ? anime.averageScore / 10 : undefined
                }
              />
            </a>
          ))
        }
      </div>
    </section>

    <!-- Popular Section -->
    <section class="container section">
      <div class="section-header">
        <h2 class="section-title">
          <Star class="icon-star" size={24} />
          La Librairie Vylos
        </h2>
        <div class="scroll-controls">
          <button class="scroll-btn prev" data-target="popular-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m15 18-6-6 6-6"></path></svg
            >
          </button>
          <button class="scroll-btn next" data-target="popular-list">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"><path d="m9 18 6-6-6-6"></path></svg
            >
          </button>
        </div>
      </div>
      <div id="popular-list" class="horizontal-scroll">
        {
          popular.map((anime) => (
            <a href={`/anime/${anime.id}`} class="card-link">
              <AnimeCard
                image={anime.coverImage.large}
                title={anime.title.romaji || anime.title.english}
                type={`${anime.format || "TV"} • ${anime.genres[0] || "Anime"}`}
                rating={
                  anime.averageScore ? anime.averageScore / 10 : undefined
                }
              />
            </a>
          ))
        }
      </div>
    </section>
  </div>

  <div class="spacer"></div>
</Layout>

<script>
  function renderHistory() {
    const historySection = document.getElementById("history-section");
    const historyList = document.getElementById("continue-watching-list");
    const globalHistory = JSON.parse(
      localStorage.getItem("vylos_global_history") || "[]"
    );

    if (globalHistory.length > 0 && historySection && historyList) {
      historySection.classList.remove("hidden");
      historyList.innerHTML = globalHistory
        .map(
          (anime: any) => `
        <a href="/anime/${anime.id}?ep=${anime.lastEp || 1}&lang=${anime.lang || "vostfr"}" class="card-link">
          <div class="anime-card">
            <div class="cover-wrapper">
              <img src="${anime.image}" alt="${anime.title}" loading="lazy" />
              <div class="progress-bar-container">
                <div class="progress-bar-fill" style="width: 100%"></div>
              </div>
              <div class="ep-tag">${anime.lang?.toUpperCase() || "VOSTFR"} • Ép. ${anime.lastEp}</div>
            </div>
            <div class="info">
              <h3 class="title">${anime.title}</h3>
              <p class="type">${anime.type}</p>
            </div>
          </div>
        </a>
      `
        )
        .join("");
    }
  }

  function setupScrollButtons() {
    const buttons = document.querySelectorAll(".scroll-btn");
    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const targetId = btn.getAttribute("data-target");
        if (!targetId) return;
        const list = document.getElementById(targetId);
        if (list) {
          const card = list.querySelector(".card-link");
          const scrollAmount = card
            ? (card.clientWidth + 20) * 2
            : list.clientWidth * 0.8;
          if (btn.classList.contains("next")) {
            list.scrollBy({ left: scrollAmount, behavior: "smooth" });
          } else {
            list.scrollBy({ left: -scrollAmount, behavior: "smooth" });
          }
        }
      });
    });
  }

  renderHistory();
  setupScrollButtons();
</script>

<style>
  .hidden {
    display: none !important;
  }

  .content-wrapper {
    position: relative;
    z-index: 20;
    margin-top: -2rem;
    padding-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .content-wrapper {
      margin-top: -5rem;
      gap: 5rem;
    }
  }

  .section {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media (min-width: 1200px) {
    .section {
      padding: 0;
    }
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: 1.15rem;
    font-weight: 800;
    margin-bottom: 0;
    color: white;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    letter-spacing: -0.5px;
    text-transform: uppercase;
  }

  .scroll-controls {
    display: none;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .scroll-controls {
      display: flex;
    }
    .section-title {
      font-size: 1.75rem;
      text-transform: none;
    }
  }

  .scroll-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
  }

  .scroll-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    transform: scale(1.1);
  }

  .scroll-btn:active {
    transform: scale(0.9);
  }

  .icon-star {
    color: #eab308;
  }
  .icon-history {
    color: var(--color-primary);
  }
  .icon-zap {
    color: #8b5cf6;
  }
  .icon-latest {
    color: #10b981;
  }

  .horizontal-scroll {
    display: flex;
    gap: 1.25rem;
    overflow-x: auto;
    padding-bottom: 1.5rem;
    scrollbar-width: none;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media (min-width: 1200px) {
    .horizontal-scroll {
      margin: 0;
      padding: 0 0 1.5rem 0;
      overflow-x: auto; /* Force horizontal scroll even on desktop */
      flex-wrap: nowrap;
      gap: 1.75rem;
    }
  }

  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }

  .card-link {
    text-decoration: none;
    display: block;
    transition: transform 0.2s;
    flex-shrink: 0;
  }

  .card-link:active {
    transform: scale(0.95);
  }

  .spacer {
    height: 100px;
  }

  .error-banner {
    height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f87171;
    font-weight: 600;
  }
</style>
