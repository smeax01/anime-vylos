---
import Layout from "../layouts/Layout.astro";
import {
  User,
  LogIn,
  Mail,
  Lock,
  Github,
  Chrome,
  MessageSquare,
} from "lucide-astro";

export const prerender = true;
---

<Layout title="Connexion">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-icon">
          <LogIn size={32} />
        </div>
        <h1>Bon retour !</h1>
        <p>Connectez-vous pour continuer l'aventure</p>
      </div>

      <form id="login-form" class="auth-form">
        <div class="input-group">
          <label for="email">Email</label>
          <div class="input-wrapper">
            <Mail size={18} class="field-icon" />
            <input
              type="email"
              id="email"
              name="email"
              placeholder="votre@email.com"
              required
            />
          </div>
        </div>

        <div class="input-group">
          <label for="password">Mot de passe</label>
          <div class="input-wrapper">
            <Lock size={18} class="field-icon" />
            <input
              type="password"
              id="password"
              name="password"
              placeholder="••••••••"
              required
            />
          </div>
        </div>

        <button type="submit" class="auth-btn"> Se connecter </button>
      </form>

      <div class="divider">
        <span>OU</span>
      </div>

      <div class="social-login">
        <button
          class="social-btn discord"
          onclick="alert('Bientôt disponible !')"
        >
          <MessageSquare size={20} />
          Discord
        </button>
        <button
          class="social-btn google"
          onclick="alert('Bientôt disponible !')"
        >
          <Chrome size={20} />
          Google
        </button>
        <button
          class="social-btn github"
          onclick="alert('Bientôt disponible !')"
        >
          <Github size={20} />
          GitHub
        </button>
      </div>

      <div class="auth-footer">
        Pas encore de compte ? <a href="/register">S'inscrire</a>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById("login-form") as HTMLFormElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const email = formData.get("email");
    const password = formData.get("password");

    try {
      const res = await fetch("/api/auth", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ action: "login", email, password }),
      });

      const data = await res.json();
      if (!res.ok) throw new Error(data.error);

      localStorage.setItem(
        "vylos_session",
        JSON.stringify({
          ...data.user,
          stats: {
            episodesSeen: data.user.stats_episodes_seen || 0,
            completed: 0,
            watchedTime: 0,
          },
        })
      );

      window.location.href = "/profile";
    } catch (err: any) {
      alert(err.message || "Erreur lors de la connexion");
    }
  });
</script>

<style>
  .auth-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .auth-card {
    background: rgba(15, 23, 42, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 3rem;
    border-radius: 24px;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
  }

  .auth-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .auth-icon {
    width: 64px;
    height: 64px;
    background: var(--color-primary);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
  }

  .auth-header h1 {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }
  .auth-header p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .input-group label {
    font-size: 0.85rem;
    font-weight: 600;
    color: #94a3b8;
  }

  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  .field-icon {
    position: absolute;
    left: 1rem;
    color: #475569;
  }

  .input-wrapper input {
    width: 100%;
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.85rem 1rem 0.85rem 3rem;
    border-radius: 12px;
    color: white;
    font-size: 1rem;
    transition: all 0.2;
  }

  .auth-btn {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 12px;
    font-weight: 700;
    cursor: pointer;
    transition: 0.2s;
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 2rem 0;
    color: var(--color-text-muted);
    font-size: 0.8rem;
    font-weight: 700;
  }

  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .divider span {
    margin: 0 1rem;
  }

  .social-login {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0.85rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 255, 255, 0.03);
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: 0.2s;
  }

  .social-btn:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-1px);
  }
  .social-btn.discord:hover {
    border-color: #5865f2;
    color: #5865f2;
  }

  .auth-footer {
    margin-top: 2rem;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  .auth-footer a {
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .auth-card {
      padding: 2rem;
    }
  }
</style>
