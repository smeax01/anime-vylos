---
import Layout from "../layouts/Layout.astro";
import { User, LogOut } from "lucide-astro";

const token = Astro.cookies.get("anilist_token")?.value;
let user = null;

if (token) {
  // Fetch User Data
  try {
    const query = `
        query {
            Viewer {
                id
                name
                avatar { large }
                bannerImage
                statistics {
                    anime {
                        count
                        minutesWatched
                        episodesWatched
                    }
                }
            }
        }`;

    const res = await fetch("https://graphql.anilist.co", {
      method: "POST",
      headers: {
        Authorization: `Bearer ${token}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ query }),
    });

    const data = await res.json();
    user = data.data?.Viewer;
  } catch (e) {
    console.error(e);
  }
}
---

<Layout title="Mon Profil">
  {
    user ? (
      <div class="profile-container">
        <div class="banner">
          {user.bannerImage && <img src={user.bannerImage} alt="Banner" />}
          <div class="overlay" />
        </div>

        <div class="container user-content">
          <div class="avatar">
            <img src={user.avatar.large} alt={user.name} />
          </div>

          <div class="user-header">
            <h1>{user.name}</h1>
            <a
              href="/api/auth/logout"
              class="btn-logout"
              onclick="document.cookie='anilist_token=; Max-Age=0; path=/;'; window.location.reload(); return false;"
            >
              <LogOut size={16} /> Déconnexion
            </a>
          </div>

          <div class="stats-grid">
            <div class="stat-card">
              <span class="value">{user.statistics.anime.count}</span>
              <span class="label">Animes</span>
            </div>
            <div class="stat-card">
              <span class="value">{user.statistics.anime.episodesWatched}</span>
              <span class="label">Épisodes</span>
            </div>
            <div class="stat-card">
              <span class="value">
                {Math.round(user.statistics.anime.minutesWatched / 60)}
              </span>
              <span class="label">Heures</span>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <div class="container page-content center-screen">
        <div class="empty-state">
          <div class="icon-bg">
            <User size={48} />
          </div>
          <h1>Profil Anime</h1>
          <p>Connectez-vous pour voir vos statistiques.</p>
          <a href="/api/auth/login" class="btn-primary">
            Connexion AniList
          </a>
        </div>
      </div>
    )
  }
</Layout>

<style>
