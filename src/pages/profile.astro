---
import Layout from "../layouts/Layout.astro";
import {
  User,
  Clock,
  Heart,
  Play,
  Camera,
  LogOut,
  Calendar,
  BarChart3,
  ChevronRight,
} from "lucide-astro";

export const prerender = true;
---

<Layout title="Profil">
  <div id="not-logged-in" class="container section hidden">
    <div class="empty-state">
      <div class="empty-icon"><User size={48} /></div>
      <h2>Non connecté</h2>
      <p>Connectez-vous pour voir votre profil et vos statistiques.</p>
      <div class="empty-actions">
        <a href="/login" class="btn btn-primary">Se connecter</a>
        <a href="/register" class="btn btn-outline">Créer un compte</a>
      </div>
    </div>
  </div>

  <div id="profile-content" class="container section hidden">
    <!-- Header -->
    <div class="profile-header">
      <div class="profile-info-main">
        <div class="avatar-container">
          <img id="user-avatar" src="" alt="Avatar" />
          <button
            class="edit-avatar"
            title="Changer d'avatar"
            onclick="alert('Bientôt disponible !')"
          >
            <Camera size={16} />
          </button>
        </div>
        <div class="user-meta">
          <div class="user-badges">
            <span class="badge premium">Membre Vylos</span>
          </div>
          <h1 id="user-name">Utilisateur</h1>
          <p class="user-status">Prêt pour l'aventure</p>
        </div>
      </div>
      <div class="profile-actions-top">
        <button id="logout-btn" class="btn btn-danger">
          <LogOut size={20} />
          Déconnexion
        </button>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <BarChart3 class="stat-icon" size={24} />
        <div class="stat-value" id="stat-time">0h</div>
        <div class="stat-label">Déjà regardé</div>
      </div>
      <div class="stat-card">
        <Play class="stat-icon icon-play" size={24} />
        <div class="stat-value" id="stat-episodes">0</div>
        <div class="stat-label">Épisodes vus</div>
      </div>
      <div class="stat-card">
        <Clock class="stat-icon icon-clock" size={24} />
        <div class="stat-value" id="stat-completed">0</div>
        <div class="stat-label">Séries finies</div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="profile-tabs">
      <button class="tab-btn active" data-tab="history">Mon Historique</button>
      <button class="tab-btn" data-tab="favorites">Mes Favoris</button>
    </div>

    <div class="tab-content" id="tab-history">
      <div id="history-list" class="results-grid">
        <!-- History cards -->
      </div>
    </div>

    <div class="tab-content hidden" id="tab-favorites">
      <div id="favorites-list" class="results-grid">
        <!-- Favorite cards -->
      </div>
    </div>
  </div>
</Layout>

<script>
  function initProfile() {
    const sessionStr = localStorage.getItem("vylos_session");
    if (!sessionStr) {
      document.getElementById("not-logged-in")?.classList.remove("hidden");
      return;
    }

    const user = JSON.parse(sessionStr);
    document.getElementById("profile-content")?.classList.remove("hidden");

    // Populate user info
    (document.getElementById("user-avatar") as HTMLImageElement).src =
      user.avatar;
    document.getElementById("user-name")!.textContent = user.username;

    // Stats
    const eps = user.stats?.episodesSeen || 0;
    document.getElementById("stat-time")!.textContent =
      `${Math.floor((eps * 24) / 60)}h`;
    document.getElementById("stat-episodes")!.textContent = eps.toString();
    document.getElementById("stat-completed")!.textContent = (
      user.stats?.completed || 0
    ).toString();

    // History & Favorites
    renderHistory();
    renderFavorites();

    // Tab Logic
    const tabs = document.querySelectorAll(".tab-btn");
    tabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        const tabName = tab.getAttribute("data-tab");
        tabs.forEach((t) => t.classList.remove("active"));
        tab.classList.add("active");

        document
          .querySelectorAll(".tab-content")
          .forEach((c) => c.classList.add("hidden"));
        document.getElementById(`tab-${tabName}`)?.classList.remove("hidden");
      });
    });

    // Logout
    document.getElementById("logout-btn")?.addEventListener("click", () => {
      localStorage.removeItem("vylos_session");
      window.location.href = "/";
    });
  }

  function renderHistory() {
    const historyList = document.getElementById("history-list");
    const history = JSON.parse(
      localStorage.getItem("vylos_global_history") || "[]"
    );

    if (history.length === 0) {
      if (historyList)
        historyList.innerHTML =
          '<div class="empty-tab-msg"><p>Ton historique est vide.</p></div>';
      return;
    }

    if (historyList) {
      historyList.innerHTML = history
        .map(
          (anime: any) => `
        <a href="/anime/${anime.id}?ep=${anime.lastEp || 1}" class="card-link">
          <div class="anime-card">
            <div class="cover-wrapper">
              <img src="${anime.image}" alt="${anime.title}" />
              <div class="progress-bar-container">
                 <div class="progress-bar-fill" style="width: 100%"></div>
              </div>
              <div class="ep-tag">Ép. ${anime.lastEp}</div>
            </div>
            <div class="info">
              <h3 class="title">${anime.title}</h3>
              <p class="type">${anime.type || "Anime"}</p>
            </div>
          </div>
        </a>
      `
        )
        .join("");
    }
  }

  function renderFavorites() {
    const favoritesList = document.getElementById("favorites-list");
    const favorites = JSON.parse(
      localStorage.getItem("vylos_favorites") || "[]"
    );

    if (favorites.length === 0) {
      if (favoritesList)
        favoritesList.innerHTML =
          '<div class="empty-tab-msg"><p>Tu n\'as pas encore de favoris.</p></div>';
      return;
    }

    if (favoritesList) {
      favoritesList.innerHTML = favorites
        .map(
          (anime: any) => `
        <a href="/anime/${anime.id}" class="card-link">
          <div class="anime-card">
            <div class="cover-wrapper">
               <img src="${anime.image}" alt="${anime.title}" />
               <div class="rating">★ Fav</div>
            </div>
            <div class="info">
              <h3 class="title">${anime.title}</h3>
              <p class="type">${anime.type || "Anime"}</p>
            </div>
          </div>
        </a>
      `
        )
        .join("");
    }
  }

  initProfile();
</script>

<style>
  .profile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    margin-top: 3rem;
    margin-bottom: 3rem;
    padding: 2.5rem;
    background: rgba(15, 23, 42, 0.4);
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  @media (max-width: 768px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
    }
  }

  .profile-info-main {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  @media (max-width: 640px) {
    .profile-info-main {
      flex-direction: column;
    }
  }

  .avatar-container {
    position: relative;
    width: 140px;
    height: 140px;
  }
  .avatar-container img {
    width: 100%;
    height: 100%;
    border-radius: 40px;
    object-fit: cover;
    border: 4px solid var(--color-primary);
    box-shadow: 0 15px 30px rgba(59, 130, 246, 0.2);
  }

  .edit-avatar {
    position: absolute;
    bottom: -10px;
    right: -10px;
    background: var(--color-primary);
    border: 4px solid #020617;
    color: white;
    width: 44px;
    height: 44px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .user-meta h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0.5rem 0;
    letter-spacing: -1px;
  }
  .user-status {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .badge.premium {
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: 800;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }
  .stat-card {
    background: rgba(30, 41, 59, 0.3);
    padding: 2.5rem;
    border-radius: 28px;
    border: 1px solid rgba(255, 255, 255, 0.02);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  .stat-value {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
  }
  .stat-label {
    font-size: 0.8rem;
    font-weight: 700;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .profile-tabs {
    display: flex;
    gap: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    margin-bottom: 3rem;
  }
  .tab-btn {
    background: none;
    border: none;
    color: var(--color-text-muted);
    font-size: 1.1rem;
    font-weight: 800;
    padding: 1.5rem 0;
    cursor: pointer;
    position: relative;
  }
  .tab-btn.active {
    color: white;
  }
  .tab-btn.active::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--color-primary);
  }

  .empty-tab-msg {
    grid-column: 1/-1;
    padding: 6rem;
    text-align: center;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 24px;
    color: var(--color-text-muted);
  }

  .btn-danger {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.1);
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  @media (min-width: 640px) {
    .results-grid {
      grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));
      gap: 2rem;
    }
  }
</style>
