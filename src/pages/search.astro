---
import Layout from "../layouts/Layout.astro";
import { Search as SearchIcon } from "lucide-astro";
---

<Layout title="Recherche">
  <div class="container search-page">
    <div class="search-header">
      <div class="search-input-wrapper">
        <SearchIcon class="search-icon" size={20} />
        <input
          type="text"
          id="search-input"
          placeholder="Rechercher un anime (ex: Naruto)..."
          autofocus
        />
      </div>
    </div>

    <div id="results-grid" class="results-grid">
      <!-- Results will appear here -->
      <div class="placeholder-msg">Tapez quelque chose pour commencer...</div>
    </div>
  </div>
</Layout>

<script>
  let debounceTimer: any;
  const input = document.getElementById("search-input") as HTMLInputElement;
  const grid = document.getElementById("results-grid");

  input?.addEventListener("input", (e) => {
    clearTimeout(debounceTimer);
    const target = e.target as HTMLInputElement;
    const query = target.value;

    if (query.trim().length < 2) {
      if (grid)
        grid.innerHTML =
          '<div class="placeholder-msg">Tapez quelque chose pour commencer...</div>';
      return;
    }

    debounceTimer = setTimeout(async () => {
      if (grid)
        grid.innerHTML =
          '<div class="loading"><div class="vylos-loader"></div> Recherche...</div>';

      try {
        const queryGraphQL = `
          query ($search: String) {
            Page(perPage: 24) {
              media(search: $search, type: ANIME, sort: POPULARITY_DESC) {
                id
                title { romaji english }
                coverImage { large }
                format
                genres
                averageScore
              }
            }
          }
        `;

        const res = await fetch("https://graphql.anilist.co", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            query: queryGraphQL,
            variables: { search: query },
          }),
        });

        const { data } = await res.json();

        if (grid && data.Page.media.length > 0) {
          grid.innerHTML = data.Page.media
            .map(
              (anime: any) => `
            <a href="/anime/${anime.id}" class="card-link">
              <div class="anime-card">
                 <div class="cover-wrapper">
                    <img src="${anime.coverImage.large}" loading="lazy" alt="${anime.title.romaji}" />
                    <span class="rating">★ ${anime.averageScore ? anime.averageScore / 10 : "?"}</span>
                 </div>
                 <div class="info">
                   <h3 class="title">${anime.title?.romaji || anime.title?.english}</h3>
                   <p class="type">${anime.format || "TV"} • ${anime.genres?.[0] || "Anime"}</p>
                 </div>
              </div>
            </a>
          `
            )
            .join("");
        } else if (grid) {
          grid.innerHTML =
            '<div class="placeholder-msg">Aucun résultat trouvé pour cette recherche.</div>';
        }
      } catch (err) {
        console.error(err);
        if (grid)
          grid.innerHTML =
            '<div class="error">Une erreur est survenue lors de la recherche.</div>';
      }
    }, 400);
  });
</script>

<style>
  .search-page {
    padding-top: 2rem;
    padding-bottom: 6rem;
    min-height: 80vh;
  }

  .search-header {
    margin-bottom: 2.5rem;
  }

  .search-input-wrapper {
    position: relative;
    background: #0f172a;
    border-radius: 12px;
    padding: 0.75rem 1.25rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .search-icon {
    color: var(--color-primary);
  }

  input {
    background: transparent;
    border: none;
    color: white;
    font-size: 1.1rem;
    width: 100%;
    outline: none;
    font-weight: 500;
  }

  input::placeholder {
    color: #475569;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  @media (min-width: 640px) {
    .results-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .results-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }
  }

  .placeholder-msg,
  .loading,
  .error {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--color-text-muted);
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-size: 1.1rem;
  }

  .card-link {
    text-decoration: none;
    display: block;
  }

  .card-link .anime-card {
    width: 100%;
  }
</style>
